{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "node index.js",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Whisper",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoExit",
        "-Command",
        "conda activate py39env; cd 'C:\\Users\\Y9000\\Desktop\\job\\oranAI\\语音识别'; uvicorn whisper_server:app --reload --port 8000"
      ],
      "problemMatcher": []
    },
    {
      "label": "Start All",
      "dependsOn": [
        "Start Frontend",
        "Start Backend",
        "Start Whisper"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
